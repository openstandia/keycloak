<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="h2-wada@nri.co.jp" id="6.0.0-SNAPSHOT">
        <addColumn tableName="REALM">
            <column name="OAUTH2_DEVICE_CODE_LIFESPAN" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="OAUTH2_DEVICE_POLLING_INTERVAL" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="CLIENT">
            <column name="OAUTH2_DEVICE_GRANT_ENABLED" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
